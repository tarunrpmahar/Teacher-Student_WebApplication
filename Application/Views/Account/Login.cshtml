
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="flex">
    <div class="card">
        <div class="card-header">
            <h6>User Login Form</h6>
        </div>
        <div class="card-body">
            <form action="Verify" method="post">
                <span>User Name:</span><br />
                <input placeholder="Enter User Name" class="form-control" name="Name" class="user" type="text" required=""><br>
                <span>Password:</span>
                <input placeholder="Enter Password" name="Password" class="form-control" type="password" required=""><br>
                <div class="flex">
                    <input type="submit" class="btn btn-info" value="LogIn" style="margin-left:93px;">
                </div>
            </form>
            <h6 style="text-align:center;color:red;margin-top: 10px;">No account? @Html.ActionLink("Create one","NewUser","NewRegistration")</h6>
        </div>
    </div>
</div>

