<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="top-nav">
        <div class="heading">
            <h1>
                @Html.ActionLink("Teacher-Student", "Index", "Home")
            </h1>
        </div>
        <img src="~/images/humanpictos.png" alt="TeacherStudentConnect" class="image" />

    </div>
    <div class='container'>
        <div class="row row_class">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/images/social-media.png" alt="register" /> </br>
                    </div>
                    <div class="col-md-7">
                        @Html.ActionLink("Register", "Register")
                        <i class="fas fa-angle-double-right"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row_class">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/images/user.png" alt="user" />
                    </div>
                    <div class="col-md-7">
                        @Html.ActionLink("User Login", "Login", "Account")
                        <i class="fas fa-angle-double-right"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row_class">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/images/computer.png" alt="admin" /> </br>
                    </div>
                    <div class="col-md-7">
                        @Html.ActionLink("Admin Login", "Login", "Admin")
                        <i class="fas fa-angle-double-right"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row_class">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/images/emoticon.png" alt="superuser" /> </br>
                    </div>
                    <div class="col-md-7">
                        @Html.ActionLink("SuperUser Login", "Login", "Super")
                        <i class="fas fa-angle-double-right"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @RenderBody()
    <div class="footer">
        <p style="margin-top: 15px;">&copy; @DateTime.Now.ToShortDateString() - My Teacher-Student-Connect Application </p>
    </div>


    <link href="~/style/Style.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/7c191d90db.js" crossorigin="anonymous"></script>
</body>
</html>
