@model IEnumerable<Application.Models.ResourceClass>

@{
    ViewBag.Title = "ShowResourceListAction";
    //Layout = "~/Views/Shared/_Layoutcheck.cshtml";
}

<h2 style="text-align:center;">Resource List</h2>

<p style="text-align:center;">
    @Html.ActionLink("Add Resource", "AddTblResource", "Resource")
</p>

@*<div style="margin-left:274px;">*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Images)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Years)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Files)
            </th>
            <th>
                @Html.DisplayName("Action")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Images)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Years)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Files)
                </td>
                <td>
                    @Html.ActionLink("Update", "Edit", new { id = item.ResId })
                </td>
            </tr>
        }

    </table>
